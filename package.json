{
  "name": "liteshop",
  "version": "1.0.0",
  "description": "e commerce website ",
  "main": "backend/src/server.tsx",
  "dependencies": {
    "eslint": "^7.25.0",
    "react-bootstrap": "^1.5.2",
    "react-bootstrap-icons": "^1.4.0",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.5",
    "multer": "^1.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/multer": "^1.4.5",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "concurrently": "^6.0.2"
  },
  "scripts": {
    "build": "cd frontend-web && npm run build",
    "install-client": "cd frontend-web && npm install",
    "server": "nodemon --exec ts-node backend/src/server.ts",
    "client": "npm start --prefix frontend-web",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "data:import": "ts-node backend/src/data/seeder.ts",
    "data:destroy": "ts-node backend/src/data/seeder.ts -d",
    "start": "nodemon --exec ts-node backend/src/server.ts",
    "heroku-postbuild": "npm run install-client && npm run build",
    "deploy": "git add . && git commit -m Heroku && git push heroku master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IdreesSamadi/LiteShop.git"
  },
  "keywords": [
    "ecommerce",
    "liteshop"
  ],
  "author": "Idrees Samadi",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/IdreesSamadi/LiteShop/issues"
  },
  "homepage": "https://github.com/IdreesSamadi/LiteShop#readme"
}
